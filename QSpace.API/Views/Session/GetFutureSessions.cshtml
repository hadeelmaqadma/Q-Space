<h1> Get all available Sessions ></h1>
@model List<StudentSessionViewModel>

@if (Model.Any())
{
    <br />
    <table class="table table-hover">
        <tr>
            <th>Code</th>
            <th>HeldAt</th>
            <th>Actions</th>
        </tr>

        @foreach (var q in Model)
        {
            <tr>
                <th>@q.Code</th>
                <th>@q.HeldAt</th>
                <th>
                    <a href="~/Session/Launch?Id=@q.Id" class="btn btn-success">Launch</a>
                </th>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-warning">
        No Sessions Added yet!
    </div>
}


