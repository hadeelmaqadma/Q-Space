@model UpdateSessionDto

@{
    ViewData["Title"] = "Update";
}
<h1>Update Session</h1>

<hr />
<form asp-action="Update">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input asp-for="Id" type="hidden" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="HeldAt" class="control-label"></label>
                <input asp-for="HeldAt" class="form-control" value="UpdateSessionDto.HeldAt"/>
                <span asp-validation-for="HeldAt" class="text-danger"></span>
            </div>
        </div>
    </div>
   
    
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
        <a asp-action="GetAll" class="btn btn-danger">Back</a>
    </div>
</form>
